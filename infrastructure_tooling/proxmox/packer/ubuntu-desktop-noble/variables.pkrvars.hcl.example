# Packer Variables Configuration
# Copy this file to 'variables.pkrvars.hcl' and update with your actual values
#
# Note: When running via GitHub Actions, these values are set dynamically
# based on the matrix strategy for multi-node builds.

# Proxmox connection details
proxmox_url      = "https://your-proxmox-server.example.com:8006/api2/json"
proxmox_username = "root@pam!packer"  # Proxmox API user for Packer operations

# Note: Leave token empty here, provide it in secrets.pkrvars.hcl for security
# proxmox_token = ""  # This should be set in secrets.pkrvars.hcl

# VM template configuration
# GitHub Actions uses matrix strategy for multi-node builds:
#   - proxmox  -> vm_id 9003
#   - proxmox2 -> vm_id 9004
vm_id        = "9003"  # VM template ID (must be unique across cluster)
proxmox_node = "proxmox"  # Name of your Proxmox node

# ISO and installation settings
iso_file     = "local:iso/ubuntu-24.04.3-desktop-amd64.iso"  # Path to Ubuntu Desktop ISO in Proxmox
ssh_username = "ubuntu"  # Default username for the VM template